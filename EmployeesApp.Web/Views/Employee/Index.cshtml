@model EmployeesApp.Web.Models.Employee[]
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
    <html>
    <head>
        <title>Employees</title>
    </head>
    <body>
    <h2>Employees</h2>
    <ol>
        @foreach (var employee in Model)
        {
            <li>
                <a asp-controller="Employee"
                   asp-action="Detail" asp-route-Id="@employee.Id"> @employee.Name - @employee.Email</a>
            </li>
        }
    </ol>
        <a href="/create">Create</a>
    </body>
    </html>
